{
    "AWS::EC2::VPC": {
        "properties": [
            {
                "propertyId": "CidrBlock",
                "type": "free-text",
                "value": "10.0.0.0/16",
                "pattern": "^[0-9.\/]+$"
            }
        ],
        "multiple": false,
        "required": true
    },
    "AWS::EC2::SecurityGroup": {
        "properties": [
            {
                "propertyId": "GroupDescription",
                "type": "free-text",
                "value": "VPC Security Group",
                "pattern": "^[a-z0-0\\s._-:/()#,@[]+=&;{}!$*]$"
            },
            {
                "propertyId": "SecurityGroupEgress",
                "type": "json",
                "value": "[{ \"CidrIp\": \"127.0.0.1/32\", \"IpProtocol\": \"-1\" }]",
                "managedRules": [
                    "VPC_DEFAULT_SECURITY_GROUP_CLOSED"
                ]
            },
            {
                "propertyId": "SecurityGroupIngress",
                "type": "json",
                "value": "[{ \"CidrIp\": \"127.0.0.1/32\", \"FromPort\": 443, \"ToPort\": 443, \"IpProtocol\": \"-1\" }]",
                "managedRules": [
                    "VPC_DEFAULT_SECURITY_GROUP_CLOSED",
                    "VPC_SG_OPEN_ONLY_TO_AUTHORIZED_PORTS"
                ]
            }
        ],
        "multiple": true,
        "required": true
    },
    "AWS::EC2::FlogLog": {
        "properties": [
            {
                "propertyId": "TrafficType",
                "type": "dropdown",
                "value": "ALL",
                "values": [
                    "ACCEPT",
                    "ALL",
                    "REJECT"
                ],
                "managedRules": [
                    "VPC_FLOW_LOGS_ENABLED"
                ]
            }
        ],
        "multiple": false,
        "required": false
    }
}